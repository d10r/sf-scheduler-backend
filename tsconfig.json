{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "lib": ["ES2020"],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": ".",
        "moduleResolution": "node"
    },
    "include": [
        "utils/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
} 